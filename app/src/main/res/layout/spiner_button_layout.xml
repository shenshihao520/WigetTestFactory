<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/bt_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19.3dp"
        android:layout_centerVertical="true"
        android:background="@drawable/xfthirddownarraw"
        />
    <TextView
        android:id="@+id/tv_valueTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        style="@style/XF_Third_MainText_Bold"
        tools:text="保单状态" />

    <TextView
        android:id="@+id/tv_value"
        style="@style/XF_Third_MainText_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/xf_third_white"
        android:layout_centerInParent="true"
        />
</merge>