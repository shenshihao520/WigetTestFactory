<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <!-- android:updatePeriodMillis="10000"> -->

    <TextView
        android:id="@+id/flowspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="float_text"
        android:textColor="#000000" />

    <Button
        android:id="@+id/hideBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flowspeed"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/xfthirddownarraw"
        android:text="hide" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hideBtn"
        android:layout_centerInParent="true"
        android:background="@drawable/xfthirduparrow"
        android:paddingTop="15dp"
        android:text="update" />

    <TextView
        android:id="@+id/usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateBtn"
        android:layout_centerInParent="true"
        android:paddingTop="15dp"
        android:text="float_text"
        android:textColor="#000000" />

    <SurfaceView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#000000"
        android:id="@+id/sv_media_surface"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>