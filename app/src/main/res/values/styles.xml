<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="XF_Third_MainText_Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="XF_Third_MainBackground">
        <item name="android:background">@drawable/xf_third_circle_ego</item>
    </style>

    <style name="XF_Third_MainText_Bold">
        <item name="android:textSize">18.7sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="XF_Third_MainText_Middle">
        <item name="android:textSize">18.7sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="XF_Third_MainText_Orange">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#f5921b</item>
    </style>

    <style name="XF_Third_MainText">
        <item name="android:textSize">18.7sp</item>
        <item name="android:textColor">#7a7a7a</item>
    </style>

    <style name="XF_Third_MainText_blue">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/xf_third_light_blue</item>
    </style>

    <style name="XF_Third_MainText_blue_littleBig">
        <item name="android:textSize">21.3sp</item>
        <item name="android:textColor">@color/xf_third_light_blue</item>
    </style>

    <style name="XF_Third_BubleBackground">
        <item name="android:background">@drawable/xf_third_circle_ego</item>
        <item name="android:layout_height">53.3dp</item>
    </style>

    <style name="XF_Third_BubleBackground_orange">
        <item name="android:background">@drawable/xf_third_orange_circle_ego</item>
        <item name="android:layout_height">53.3dp</item>
    </style>

    <style name="XF_Third_LineSpacing_BasicForm">
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="XF_Third_Button_WhiteText">
        <item name="android:textSize">26.7sp</item>
        <item name="android:textColor">@color/xf_third_white</item>
    </style>

    <style name="XF_Third_Button_BlueText">
        <item name="android:textSize">26.7sp</item>
        <item name="android:textColor">@color/xf_third_light_blue</item>
    </style>

    <style name="XF_Third_Button_WhiteText_MainText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/xf_third_white</item>
    </style>

    <style name="XF_Third_EditTitleText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">21.3sp</item>
        <item name="android:textColorHint">#999999</item>
    </style>

    <style name="XF_Third_EditText">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">21.3sp</item>
    </style>

    <style name="XF_Third_DetailTitle">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">18.7sp</item>
    </style>
     

    <style name="add_dialog" parent="@android:style/Theme.Dialog">
               
        <item name="android:windowFrame">@null</item>
                <!-- 边框 -->
               
        <item name="android:windowIsFloating">true</item>
                <!-- 是否浮现在activity之上 -->
               
        <item name="android:windowIsTranslucent">false</item>
                <!-- 半透明 -->
               
        <item name="android:windowNoTitle">true</item>
                <!-- 无标题 -->
               
        <item name="android:windowBackground">@color/xf_third_white</item>
                <!-- 自己想要的背景 -->
               
        <item name="android:backgroundDimEnabled">false</item>
                <!-- 模糊 -->
           
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
